{
  "name": "yepbro/eloquent-validator",
  "version": "dev-master",
  "description": "A Laravel package to add validation methods directly to Eloquent models",
  "homepage": "https://yepbro.ru",
  "authors": [
    {
      "name": "Denis aka YepBro",
      "email": "denis@yepbro.ru",
      "homepage": "https://yepbro.ru"
    }
  ],
  "type": "library",
  "license": "MIT",
  "keywords": [
    "eloquent",
    "validator",
    "laravel",
    "validation"
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^8.3",
    "illuminate/database": "*",
    "illuminate/events": "*",
    "illuminate/support": "*",
    "illuminate/validation": "*",
    "illuminate/translation": "*",
    "illuminate/filesystem": "*",
    "illuminate/console": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "2.1.x-dev",
    "orchestra/testbench": "10.x-dev"
  },
  "autoload": {
    "psr-4": {
      "YepBro\\EloquentValidator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YepBro\\EloquentValidator\\Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/",
      "Workbench\\Database\\Factories\\": "workbench/database/factories/",
      "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests",
    "unittest": "vendor/bin/phpunit tests --testsuite=Unit",
    "laratest": "vendor/bin/phpunit tests --testsuite=Feature",
    "testdox": "vendor/bin/phpunit tests --no-progress --testdox",
    "coverage-text": "vendor/bin/phpunit tests --coverage-text",
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon -l 10",
    "post-autoload-dump": [
      "@clear",
      "@prepare"
    ],
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ],
    "lint": [
      "@php vendor/bin/phpstan analyse --verbose --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "YepBro\\EloquentValidator\\EloquentValidatorServiceProvider"
      ]
    }
  }
}